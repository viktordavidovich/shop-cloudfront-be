{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "sourceRoot": "/",
    "target": "es2020",
    "outDir": ".build",
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2020", "dom"],
    "rootDir": "./src",
    "include" : ["src/types/**.d.ts"],
    "exclude": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ]
  }
}